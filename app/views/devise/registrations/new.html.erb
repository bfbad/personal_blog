<div class="container">
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :name, class: "sr-only" %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Enter Your Name" %>
    </div>

    <div class="field form-group">
      <%= f.label :email, class: "sr-only" %><br />
      <%= f.email_field :email, class: "form-control", placeholder: "Enter Your Email Address" %>
    </div>

    <div class="field form-group">
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Your Password. #{"("+ @minimum_password_length.to_s + " characters minimum)" if @minimum_password_length}" %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation, class: "sr-only" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Your Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div> <!-- /container -->
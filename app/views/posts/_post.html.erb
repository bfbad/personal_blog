
    
<div class="card text-center col-xs-6 col-sm-3 box">
  <div class="inner">
    <%= image_tag(post.image_url, class: "card-img-top img-responsive") %>
    <div class="card-block">
      <h4 class="card-title"><%= post.created_at.strftime("%d %B %Y") %></h4>
      <p class="card-text"><%= post.title %></p>
      <%= link_to 'View Post', post, class: "btn btn-primary button" %>
    </div>
  </div> <!-- /inner -->
</div>



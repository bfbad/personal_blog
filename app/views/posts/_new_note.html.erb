<% if signed_in? %>
  <h4>Add a comment:</h4>
  <%= form_for([@post, @post.notes.build], remote: true) do |f| %>
    <div class="field form-group">
      <p>
        <%= f.label :body, "Comments", class: "control-label strong" %>
        <%= f.text_area :body, class: "form-control" %>
      </p> 
    </div>
    <p>
      <%= f.submit "Submit Comments", class: "btn btn-primary" %>
    </p>
  <% end %>
<% end %>